/* * ------------------------------------------------ ui */

/** hide link right-side icon */
a .icon.outbound {
  display: none;
}

/* * ---------------- sidebar */

/** sidebar nav toc */
li.sidebar-sub-header a {
  color: hsl(0, 0%, 50%);
}

/** side list item overflow */
/* .right-menu-item a, */
.sidebar-links li a {
  display: block;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* * ----------------  */

/** site inner link */
main a[href^='/'],
main a[href^='#'] {
  text-decoration: underline dotted hsla(220, 80%, 60%, 0.5);
  color: $accentColor;
}

/** kbd */
kbd {
  background-color: #eee;
  border-radius: 3px;
  border: 1px solid #b4b4b4;
  box-shadow: 0 1px 1px rgba(0, 0, 0, 0.2), 0 2px 0 0 rgba(255, 255, 255, 0.7) inset;
  color: #333;
  display: inline-block;
  font-size: 0.85em;
  font-weight: 700;
  line-height: 1;
  padding: 2px 4px;
  white-space: nowrap;
}

/** article blockquote */
blockquote {
  color: hsl(0, 0%, 50%);
}

/* * ---------------- theme override */

body .theme-vdoing-content a code {
  color: unset;
}

.theme-mode-light .theme-vdoing-content code {
  color: hsl(200, 100%, 20%);
}

/** bold link hack */
body .theme-vdoing-content a strong {
  color: hsl(220, 80%, 55%);
  font-weight: 700;
}

/* * ---------------- h2 spliter */

main h2:nth-of-type(4n + 1) {
  border-bottom: 2px solid hsl(0, 50%, 70%);
}
main h2:nth-of-type(4n + 2) {
  border-bottom: 2px solid hsl(50, 50%, 70%);
}
main h2:nth-of-type(4n + 3) {
  border-bottom: 2px solid hsl(100, 50%, 70%);
}
main h2:nth-of-type(4n + 4) {
  border-bottom: 2px solid hsl(220, 50%, 70%);
}

/* * ---------------- article custom video timeline */

main .timeline-note + ul a + ul,
main .timeline-note + ul a + ul ul {
  line-height: 1.3;
  font-size: 14px;
  color: hsl(0, 0%, 50%);
}
main .timeline-note + ul code {
  padding: 0.05rem 0.4rem;
}

/* * ---------------- article */

main.page {
  word-break: break-word;
}

